{
    "name": "lwc-todomvc",
    "description": "LWC TodoMVC app",
    "version": "1.0.0",
    "author": "STUkh",
    "bugs": "https://github.com/STUkh/lwc-todomvc/issues",
    "dependencies": {
        "classnames": "^2.3.2",
        "compression": "^1.7.4",
        "express": "^4.18.2",
        "helmet": "^6.0.1",
        "lightning-base-components": "^1.17.7-alpha"
    },
    "devDependencies": {
        "@salesforce-ux/design-system": "^2.20.1",
        "eslint": "^7.20.0",
        "husky": "^5.0.9",
        "lint-staged": "^10.5.4",
        "lwc-services": "^3.2.2",
        "prettier": "^2.2.1"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/STUkh/lwc-todomvc",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "STUkh/lwc-todomvc",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
